<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/lotto_number_generator</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">30sp</item>
    </style>

    <style name="logo">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:src">@drawable/logo2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/lottery_balls</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="inputText">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/enter_number</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_margin">10sp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/button_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="outputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/result</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@color/result</item>
    </style>

</resources>


